{
    "name": "atk4/ui",
    "type": "library",
    "description": "Agile UI - Web Component Framework written in PHP",
    "keywords": ["framework", "ui", "web", "form", "component", "widget", "render", "gadget", "button", "grid", "crud"],
    "homepage": "https://agiletoolkit.org/ui",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Romans Malinovskis",
            "email": "romans@agiletoolkit.org",
            "homepage": "https://nearly.guru/"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "atk4/data": "^1.1",
        "atk4/core": "^1.2",
        "fzaninotto/faker": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "<6",
        "codeclimate/php-test-reporter": "*"
    },
    "autoload": {
        "psr-4": {"atk4\\ui\\":"src/"}
    },
    "autoload-dev": {
        "psr-4": {
          "atk4\\ui\\tests\\":"tests/"
        }
    }
}
